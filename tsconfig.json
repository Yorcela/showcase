{
  "include": ["src", "types"],
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "types": ["node"],
    "lib": ["ES2020"],
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@ports/*": ["src/core/ports/*"],
      "@core/*": ["src/core/*"],
      "@modules/*": ["src/modules/*"],
      "@infrastructure/*": ["src/infrastructure/*"],
      "@sanitizers/*": ["src/shared/modules/sanitizer/*"],
      "@pipes/*": ["src/shared/pipes/*"],
      "@utils/*": ["src/shared/utils/*"],
      "@validators/*": ["src/shared/validators/*"],
      "@apptypes/*": ["src/shared/types/*"],
      "@shared/*": ["src/shared/*"]
    }
  }
}
