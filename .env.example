# DATABASE_HOST=postgres
# DATABASE_PORT=5432
# DATABASE_INITDB_ARGS=--encoding=UTF-8 --lc-collate=C --lc-ctype=C

# ================================
# LOGGING
# ================================
LOG_LEVELS=error
LOG_FORMAT=json

# ================================
# APPLICATION CONFIGURATION
# ================================
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1
APP_NAME="yorcela API"
APP_VERSION=1.0.0
APP_URL=http://localhost:3000/

# CORS
FRONTEND_URL=http://localhost:4200
FRONTEND_REPO_BRANCH=main

APP_OTP_EXPIRATION_IN_MINUTES=10
APP_LANGUAGES=fr,en,es
APP_DEFAULT_LANGUAGE=fr

# ================================
# SECURITY & JWT
# ================================
JWT_SECRET=CHANGE_ME
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN_REMEMBERME=90d

ARGON2_MEMORY=4096
ARGON2_ITERATIONS=1
ARGON2_PARALLELISM=1

RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=1000
RATE_LIMIT_AUTH_TTL=900
RATE_LIMIT_AUTH_MAX=50

# ================================
# EMAIL CONFIGURATION
# ================================
EMAIL_FROM=no-reply@yorcela.com
EMAIL_SUPPORT=bonjour@yorcela.com

EMAIL_PROVIDER=mailhog
EMAIL_RENDERER=handlebars

MAILHOG_HOST=mailhog
MAILHOG_PORT=1025
MAILHOG_WEB_PORT=8025

# ================================
# DEVELOPMENT TOOLS
# ================================
SWAGGER_ENABLED=true
SWAGGER_USER=admin
SWAGGER_PASSWORD=CHANGE_ME

# ================================
# UPLOADS
# ================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp,application/pdf
UPLOAD_DEST=./uploads
