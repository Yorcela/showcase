# ================================
# DATABASE CONFIGURATION
# ================================
ORM_PROVIDER=prisma
DATABASE_NAME=tallae_dev
DATABASE_USER=tallae_dev
DATABASE_PASSWORD=tallae_password_example(https://www.dashlane.com/features/password-generator)
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_INITDB_ARGS=--encoding=UTF-8 --lc-collate=C --lc-ctype=C
# DATABASE_URL=postgresql://${DATABASE_USER}:${DATABASE_PASSWORD}@${DATABASE_HOST}:${DATABASE_PORT}/${DATABASE_NAME}?schema=public
# DATABASE_PROVIDER="postgresql"
DATABASE_PROVIDER=sqlite
DATABASE_URL="file:./prisma/sqlite/prisma/tallae_dev.sqlite.db"

# ================================
# LOGGING
# ================================
LOG_LEVELS=error
LOG_FORMAT=json

# ================================
# APPLICATION CONFIGURATION
# ================================
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1
APP_NAME="tallae API"
APP_VERSION=1.0.0
APP_URL=http://localhost:3000/
FRONTEND_URL=http://localhost:4200
FRONTEND_REPO_BRANCH=main

APP_OTP_EXPIRATION_IN_MINUTES=10
APP_LANGUAGES=fr,en,es
APP_DEFAULT_LANGUAGE=fr

# ================================
# SECURITY & JWT
# ================================
# -> Replace with a strong secret in production
JWT_SECRET=changeme_jwt_secret_example_please_replace(https://jwtsecrets.com)
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN_REMEMBERME=90d

# Password hashing (Argon2id) - lighter for dev/tests
ARGON2_MEMORY=4096
ARGON2_ITERATIONS=1
ARGON2_PARALLELISM=1

# Rate limiting - more permissive for dev
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=1000
RATE_LIMIT_AUTH_TTL=900
RATE_LIMIT_AUTH_MAX=50

# ================================
# EMAIL CONFIGURATION
# ================================
EMAIL_PROVIDER=mailhog
EMAIL_FROM=no-reply@tallae.app
MAILHOG_HOST=mailhog
MAILHOG_PORT=1025
MAILHOG_WEB_PORT=8025
EMAIL_RENDERER="handlebars"

# ================================
# DEVELOPMENT TOOLS
# ================================
SWAGGER_ENABLED=true
SWAGGER_USER=admin
SWAGGER_PASSWORD=changeme_swagger_password(https://www.dashlane.com/features/password-generator)
SWAGGER_PATH=swagger

# ================================
# UPLOADS
# ================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp,application/pdf
UPLOAD_DEST=./uploads

EMAIL_SUPPORT="bonjour@tallae.app"
